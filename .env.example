# ============================================================================
# MATCHIFY Environment Variables Template
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

APP_NAME=MATCHIFY
APP_VERSION=1.0.0
NODE_ENV=development

# URLs
APP_URL=https://matchify.app
API_URL=https://api.matchify.app
FRONTEND_URL=http://localhost:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DATABASE_URL=postgresql://user:password@localhost:5432/matchify_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=matchify_db
DB_USER=postgres
DB_PASSWORD=your_password

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================

FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Backend only)
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/serviceAccountKey.json

# ============================================================================
# PAYMENT GATEWAY (RAZORPAY)
# ============================================================================

RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# ============================================================================
# FILE STORAGE (CLOUDINARY)
# ============================================================================

CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@matchify.app
SMTP_FROM_NAME=MATCHIFY Team

# ============================================================================
# SECURITY
# ============================================================================

JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:5173,https://matchify.app

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# FEATURE FLAGS
# ============================================================================

ENABLE_COMMUNITY_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PAYMENT_PROCESSING=true

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Set to true to use mock data instead of real API calls
USE_MOCK_DATA=false

# Set to true to enable detailed logging
DEBUG=false

# ============================================================================
# NOTES
# ============================================================================

# 1. Never commit .env file to version control
# 2. Keep .env.example updated with new variables
# 3. Use strong, random values for secrets
# 4. Rotate secrets regularly
# 5. Use different values for dev, staging, and production
